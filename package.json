{
  "name": "thesis",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered investment research platform for position investors",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "db:generate": "pnpm --filter @thesis/db generate",
    "db:migrate": "pnpm --filter @thesis/db migrate",
    "db:push": "pnpm --filter @thesis/db push",
    "db:studio": "pnpm --filter @thesis/db studio",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
